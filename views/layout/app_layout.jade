doctype html
html
  head
    title 拼邮

    // Viewport mobile tag for sensible mobile support
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1")
    link(rel="icon" href="/imgs/py.ico" type="image/x-icon")
    link(href='/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/angular-material/angular-material.css' ,rel='stylesheet')
    link(href='/styles/PYApp.css', rel='stylesheet')
    block styles

  body(ng-app='PYApp')
    nav.navbar.navbar-default.navbar-fixed-top(ng-controller='navCtl')
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle="collapse" data-target="#navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') 拼邮
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li(ng-class="getActiveMenu('/')")
              a(href='/') 首页
            if user && user.user
              li(ng-class="getActiveMenu('/user/center')")
                a(href='/user/center') 宝宝中心
              li(ng-class="getActiveMenu('/user/logout')")
                a(href='/user/logout') 退出
            else
              li
                a(href='/login') 登录
            li(ng-class="getActiveMenu('/post')")
              a(href='/post')
                span.glyphicon.glyphicon-edit
            li
              a.animate(ng-click='openSearch()')
                span.glyphicon.glyphicon-search

      .pinyou-search.animate(ng-class="{'open':isOpen}")
        .container
          form()
            .input-group
              input.form-control(type='text', name='search', placeholder='推荐搜索....')
              span.input-group-btn
                button.btn.btn-danger(type='reset',ng-click='closeSearch()')
                  span.glyphicon.glyphicon-remove

    block body

    .footer
      .footer-main
        p Copyright © 2016 PINYOU

    script(src="/angular/angular.min.js")
    script(src="/jquery/dist/jquery.min.js")
    script(src="/underscore/underscore-min.js")
    script(src="/bootstrap/dist/js/bootstrap.min.js")
    script(src="/angular-aria/angular-aria.js")
    script(src="/angular-animate/angular-animate.js")
    script(src="/angular-material/angular-material.js")
    script(src="/lf-ng-md-file-input/dist/lf-ng-md-file-input.min.js")
    script(src="/js/app.js")
    block js