extends ../../layout/X_layout
block styles
  link(href='/styles/login_register.css', rel='stylesheet')
block body
  .loginBody(ng-app='XApp' ng-controller='loginCtl' ng-cloak layout="column" layout-align="center center")
    .logo(layout="row" layout-align="center center")
      img(src="/imgs/py.svg")
    form.loginForm(name='loginForm' layout="row")
        .login-content(layout="column")
          .login-input-row(layout="row")
            md-icon(md-svg-src="/imgs/icons/ic_username.svg" class="s24" aria-label="username" flex='10')
            md-input-container.md-block(flex='90')
              label 用户名:
              input(ng-model='user.username', required='')
          .login-input-row(layout="row")
            md-icon(md-svg-src="/imgs/icons/ic_password.svg" class="s24" aria-label="password" flex='10')
            md-input-container.md-block(flex='90')
              label 密码:
              input(ng-model='user.password', type='password', required='')
          md-button.md-raised.md-primary 登录

          .login-input-row.more(layout="row")
            a(href='/register' flex='50') 没有账号?
            a(href='' flex='50') 忘记密码?



block js
  script(src="/js/login_register.js")